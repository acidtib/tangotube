<%= "Displaying #{@videos_sorted.count} Videos" %>
<div data-controller="toggle">
    <button type= 'submit', data-action="toggle#toggle", class= "filter_button">
      <i class="fas fa-filter fa-lg" aria-hidden="true"></i>
    </button>
    <div class="hidden" data-target="toggle.toggleable">

    <div class="filter_container">
      <div class="filter_item">
        <label>Type</label>
        <%= select_tag "videotype", 
            content_tag( :option, 
                        "Select All #{@videotypes.count} Types", 
                        selected: "selected", value: "" ) +
                        options_for_select(@videotypes),
            class: "select-css",
            data: { action: "filters#filter", target: "filters.filter" },
            name: "videotype_id",
            multiple: false,
            id: "different_option_value_html",
            size: 12 %>
      </div>
      <div class="filter_item">
        <label>Genre</label>
        <%= select_tag "genre", 
            content_tag(:option, 
                        "Select All #{@genres.count} Genres", 
                        selected: "selected", value: "" ) +
            options_for_select(@genres),
            class: "select-css",
            data: { action: "filters#filter", target: "filters.filter" },
            name: "genre",
            multiple: false,
            size: 12 %>
      </div>
      <div class="filter_item">
        <label>Leader</label>
        <%= select_tag "leader", 
            content_tag(:option, 
                        "Select All #{@leaders.count} Leaders", 
                        selected: "selected", value: "" ) +
            options_from_collection_for_select(@leaders, "id", "name"),
            name: "leader_id",
            multiple: false,
            size: 12 %>
      </div>
      
      <div class="filter_item">
        <label>Follower</label>
        <%= select_tag "follower", 
            content_tag(:option, 
                        "Select All #{@followers.count} Followers", 
                        selected: "selected", value: "" ) +
            options_for_select(@followers),
            name: "follower_id",
            class: "select-css",
            data: { action: "filters#filter", target: "filters.filter" },
            multiple: false,
            size: 12 %>
      </div>
      <div class="filter_item">
        <label>Event</label>
        <%= select_tag "event", 
            content_tag( :option, 
                            "Select All #{@events.count} Events", 
                            selected: "selected", value: "" ) +
                            options_for_select(@events),
            name: "event_id",
            class: "select-css",
            data: { action: "filters#filter", target: "filters.filter" },
            multiple: false,
            size: 12 %>
      </div>
      <div class="filter_item">
        <label>Channel</label>
        <%= select_tag :channels,
            content_tag(:option,
                          "Select All #{@channels.count} Channels",
                          selected: "selected", value: "" ) +
                          options_for_select(@channels,
                          request.params.merge(channel: params[:channel])),
            class: "select-css",
            data: { action: "filters#filter", target: "filters.filter" },
            name: "channel",
            multiple: false,
            size: 12 %>
      </div>
    </div>
</div>
</div>
</div>