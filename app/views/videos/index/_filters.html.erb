<%= "Displaying #{@videos_sorted.count} Videos" %>
<div data-controller="toggle">
  <button type= 'submit' data-action="toggle#toggle" class= "filter_button">
    <i class="fas fa-filter fa-lg" aria-hidden="true"></i>
  </button>
  <div class="hidden" data-target="toggle.toggleable">


 <%= form_with( model: @videos, local: true) do |f| %>
    <div class="filter_container" data-controller='select-filter' data-select-filter-url="<%= videos_path %>">
      <div class="filter_item">
        <label>Type</label>
        <%= select_tag :videotype, options_for_select(@videotypes), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"} %>
      </div>  

    <div class="filter_item" data-controller='filter' >
      <label>Genre</label>
      <%= select_tag :genre, 
            options_for_select( @genres), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"} %>
    </div>

 <div class="filter_item" data-controller="select-filter" data-select-filter-url="<%= videos_path %>">
        <label>Leader</label>
        <%= select_tag :leader, options_for_select(@leaders), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"} %>
      </div>
      
      <div class="filter_item" data-controller='select-filter' data-select-filter-url="<%= videos_path %>">
        <label>Follower</label>
        <%= select_tag :follower, options_for_select(@followers), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"}  %>
      </div>
      <div class="filter_item" data-controller='select-filter' data-select-filter-url="<%= videos_path %>">
        <label>Event</label>
        <%= select_tag :event, options_for_select(@events), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"}  %>
      </div>
      <div class="filter_item" data-controller='select-filter' data-select-filter-url="<%= videos_path %>">
        <label>Channel</label>
        <%= select_tag :channel, options_for_select(@channels), 
            multiple: false, 
            size: 12,
            include_blank: "Select All Genres",
            data: { action: "filter#filter", target: "filter.filter"} %>
      </div>  
      <% end %>
    </div> 
  </div>
</div>