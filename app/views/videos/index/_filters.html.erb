              size: 12,
              id: 'select-css',
              data: { action: "filter#filter", target: "filter.filter"}  %>
      </div>
      <div class="filter_item">
        <label>Channel</label>
        <%= select_tag :channel, 
              options_for_select( [["Select All #{@channels.count} Channels", "all"]]+ @channels, 
              params[:channel].presence || "all"
            ), 
            multiple: false, 
            size: 12,
            id: 'select-css',
            data: { action: "filter#filter", target: "filter.filter"} %>
      </div>
    </div>
  </div>
</div>