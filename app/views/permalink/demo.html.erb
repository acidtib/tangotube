<div class="form-row mb-4" data-controller="permalink" data-permalink-channel="<%= params[:channel] %>">
   <div class="col-3">
    <%= label_tag "channel" %>
    <%= select_tag "channel",
            options_for_select(@channels, params[:channel]),
            include_blank: true,
            class: "form-control",
            data: { action: "change->permalink#filter",
                    reflex_root: "#search-results" } %>
  </div>

<div id="search-results">
  <table class="table table-striped table-bordered">
    <thead class="bg-primary">
      <tr>
        <th style="width:33%" class="text-white">Channel</th>
        <th style="width:33%" class="text-white">Upload Date</th>
        <th style="width:33%" class="text-white">View Count</th>
      </tr>
    </thead>

    <tbody>
      <% @videoss.each do |videos| %>
        <tr>
          <td><%= videos.channel %></td>
          <td><%= videos.upload_date %></td>
          <td><%= videos.view_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>