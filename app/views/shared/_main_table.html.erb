<div id="main" class="tableContainer">
    <table border="0" cellpadding="0" 
                      cellspacing="0" 
                      width="100%" 
                      class="scrollTable">
    <thead class="fixedHeader">
        <tr>
            <th width= "35px" ><%= sortable "id", "ID" %></th>
            <th width= "100px"><%= sortable "leader_id", "Leader" %></th>
            <th width= "100px"><%= sortable "follower_id", "Follower" %></th>
            <th width= "80px"><%= sortable "song", "Song" %></th>
            <th width= "90px"><%= sortable "artist", "Artist" %></th>
            <th width= "70px"><%= sortable "channel", "Channel" %></th>
            <th width= "50px"><%= sortable "view_count", "View Count" %></th>
            <th width= "80px"><%= sortable "upload_date", "Upload Date" %></th>
        </tr>
    </thead>
    <tbody class="scrollContent">
        <% @videos.each do |video| %>
        <tr class="<%= cycle("normalRow", "alternateRow") %>">
            <td width= "50px"> <%= link_to "#{video.id}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "130px"><%= link_to "#{video.leader.name}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "150px"><%= link_to "#{video.follower.name }", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "115px"><%= link_to "#{video.song}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "135px"><%= link_to "#{video.artist}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "100px"><%= link_to "#{video.channel}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "80px"><%= link_to "#{video.view_count}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
            <td width= "100px"><%= link_to "#{video.upload_date}", current_page_params.merge(:youtube_id => "#{video.youtube_id}" ) %></td>
        </tr>
        <% end %>
    </tbody>
</table>