      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Channel</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
         <tr>
               <td>
                   <%= link_to "All (#{Video.pluck(:channel).uniq.count} Channels)", current_page_params.merge(:channel => " ") %>
               </td>
            </tr>
                <% @videos.pluck('channel').sort.uniq.each do |channel| %>
             <tr>
                <td>
                  <%= link_to "#{channel}", current_page_params.merge(:channel => "#{channel}" )%>
