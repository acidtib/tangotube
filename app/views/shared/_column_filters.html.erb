<div class="container">
   <div id="Type Filter" class="tableContainerFilter">
         <table class="scrollTableFilter">
            <thead class="fixedHeaderFilter">
               <tr>
                  <th>Type</th>
               </tr>
            </thead>
            <tbody class="scrollContentFilter">
               <tr>
                  <td>Performance</td>
               </tr>
               <tr>
                  <td>Class</td>
               </tr>
