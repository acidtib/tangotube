<div class="container">
   <div id="Filter 1" class="tableContainerFilter">
         <table class="scrollTableFilter">
            <thead class="fixedHeaderFilter">
               <tr>
                  <th>Type</th>
               </tr>
            </thead>
            <tbody class="scrollContentFilter">
               <tr>
                  <td>Performance</td>
               </tr>
               <tr>
                  <td>Class</td>
               </tr>
               <tr>
                  <td>Short</td>
               </tr>
