               </tr>
            </tbody>
         </table>
   </div> 
   <div id="Filter 3" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Leader</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
            <tr>
               <td>
                  <%= link_to "All (#{Leader.count} Leaders)", current_page_params.merge(:leader_id => " ") %>
               </td>
            </tr>
            <% @videos.pluck('leader_id').sort.uniq.each do |leader_id| %>
            <tr>
               <td>
                  <%= link_to "#{Leader.find_by(id: leader_id).name}", current_page_params.merge(:leader_id => "#{leader_id}" ) %>
               </td>
            </tr>
            <% end %>
         </tbody>
      </table>
   </div>     
   <div id="Filter 4" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Follower</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
            <tr>
               <td>
                  <%= link_to "All (#{Follower.count} Followers)", current_page_params.merge(:follower_id => " ") %>
               </td>
            </tr>
               <% @videos.pluck('follower_id').sort.uniq.each do |follower_id| %>
            <tr>
               <td>
                  <%= link_to "#{Follower.find_by(id: follower_id).name}", current_page_params.merge(:follower_id => "#{follower_id}" ) %>
               </td>
            </tr>
            <% end %>
         </tbody>
      </table>
   </div>
   <div id="Filter 5" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Event</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
            <tr>
               <td>Bucharest Tango Groove</td>
            </tr>
