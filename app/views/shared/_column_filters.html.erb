   <div id="Leader Filter" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Leader</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
            <tr>
               <td>
                  <%= link_to "All (#{Video.pluck('leader_id').uniq.count} Leaders)", current_page_params.merge(:leader_id => " ") %>
               </td>
            </tr>
               <% @videos.pluck('leader_id').sort.uniq.each do |leader_id| %>
            <tr>
               <td>
                   <%= link_to "#{Leader.find_by(id: leader_id).name}", current_page_params.merge(:leader_id => "#{leader_id}" ) %>
               </td>
            </tr>
             <% end %>
         </tbody>
      </table>
   </div>     
   <div id="Follower Filter" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Follower</th>
