      </table>
   </div>
   <div id="Filter 6" class="tableContainerFilter">
      <table class="scrollTableFilter">
         <thead class="fixedHeaderFilter">
            <tr>
               <th>Channel</th>
            </tr>
         </thead>
         <tbody class="scrollContentFilter">
            <% @videos.map{|v| {channel: v.channel, channel_id: v.channel_id} }.uniq.each do |video| %>
            <tr>
               <td>
                  <%= link_to "#{video[:channel]}", current_page_params.merge(:channel_id => "#{video[:channel_id]}" )%>
               </td>
            </tr>
            <% end %>
         </tbody>
      </table>
   </div>
</div>