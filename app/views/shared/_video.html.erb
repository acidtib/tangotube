  
<div id="youtube_video">
    <div class="iframe-container">
        <p align="center">
            <iframe scrolling="no"
                    onload="resizeIframe(this)"
                    src="https://www.youtube.com/embed/<%= params[:youtube_id] %>"
                    allow= "accelerometer;
                            autoplay;
                            encrypted-media;
                            gyroscope;
                            picture-in-picture" allowfullscreen>
            </iframe>
        </p>
    </div>
</div>